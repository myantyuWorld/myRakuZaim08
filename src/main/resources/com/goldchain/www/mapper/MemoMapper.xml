<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.goldchain.www.mapper.MemoMapper">

<resultMap type="com.goldchain.www.domain.pojo.Memo"
		id="memoResultMap">
		<id property="mmid" column="MMID" />
		<result property="mmid" column="MMID" />
		<result property="mmsb" column="MMSB" />
		<result property="mmnm" column="MMNM" />
		<result property="count" column="COUNT" />
		<result property="deleteFlg" column="DELETEFLG" />	
	</resultMap>
	<select id="selectAll" resultMap="memoResultMap">
	SELECT
	  MMID
	  , MMSB
	  , MMNM 
	FROM
	  t_memo
	WHERE 
		DELETEFLG != 1;
	</select>
	<select id="selectMaxMMid" resultType="int">
		SELECT
		  max(mmid) + 1
		FROM
		  t_memo; 
	</select>
	<select id="selectOrderManyMemoNaiyou" resultMap="memoResultMap">
	<!-- 食費・日用品 で入力の多いレコードを取得する-->
	SELECT
	  MMNM
	  , MMSB
	  , count(MMNM) AS count 
	FROM
	  t_memo 
	WHERE
	  mmsb = #{mmsb} 
	GROUP BY
	  MMNM
	  , MMSB
	HAVING
	  count(MMNM) > 1 
	ORDER BY
	  count DESC 
	LIMIT
	  100
	</select>
	
	<select id="selectOrderManyMemoNaiyouAll" resultMap="memoResultMap">
	<!-- 食費・日用品 で入力の多いレコードを取得する-->
	SELECT
	  MMNM
	  , MMSB
	  , count(MMNM) AS count 
	FROM
	  t_memo 
	GROUP BY
	  MMNM
	  , MMSB 
	HAVING
	  count(MMNM) > 1 
	ORDER BY
	  count DESC 
	LIMIT
	  100


	</select>
	
	<insert id="insertMemo" parameterType="com.goldchain.www.domain.pojo.Memo">
		INSERT 
		INTO t_memo 
		VALUES (#{mmid}, #{mmsb}, #{mmnm}, 0);
	</insert>
	
	<delete id="deleteMemo">
		<!-- DELETE FROM t_memo WHERE mmid = #{mmid}; -->
		UPDATE t_memo 
		SET
		  deleteflg = 1 
		WHERE
		  mmid = #{mmid};
	</delete>
	
</mapper>
